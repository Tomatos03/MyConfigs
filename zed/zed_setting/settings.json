{
  // ========================= AI相关 =========================
  "auto_update": false,
  "confirm_quit": false,
  "agent_ui_font_size": 22,
  "agent_buffer_font_size": 16,
  "disable_ai": false,
  "agent": {
    "always_allow_tool_actions": true,
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-haiku-4.5"
    },
    "default_profile": "ask",
    "dock": "right",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    }
  },

  // ========================= 杂项 =========================
  "sticky_scroll": {
    "enabled": true
  },
  "languages": {
    "Vue.js": {
      "preferred_line_length": 120
    }
  },
  "title_bar": {
    "show_branch_icon": true
  },
  "auto_indent": true,
  "autosave": "on_focus_change",
  "restore_on_file_reopen": true,
  "colorize_brackets": true,
  "format_on_save": "off",
  "preview_tabs": {
    "enabled": false // 关闭后每次打开新文件创建一个新的tab
  },

  // ========================= 关闭匿名数据收集 =========================
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // ========================= 主题相关 =========================
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Catppuccin Macchiato"
  },
  "icon_theme": "Material Icon Theme",

  // ========================= Vim相关设置 =========================
  "vim_mode": true,
  "vim": {
    "default_mode": "insert",
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": true,
    "highlight_on_yank_duration": 200
  },

  // ========================= 代码编辑区 =========================
  "buffer_font_size": 20,
  "buffer_font_family": "Fira Code",
  "buffer_font_features": {
    "calt": true, // 连字特性
    "cv01": true, // 字母a
    "cv02": true, // 字母g
    "cv03": true, // 字母i
    "cv07": true, // 字母l
    "cv29": true, // 花括号
    "cv30": true, // 符号|
    "ss03": true, // 符号&
    "ss05": true // 符号@
  },
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "subtle"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": false,
    "show_parameter_hints": true,
    "show_other_hints": false,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "diagnostics": {
    "button": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": "warning"
    }
  },

  // ========================= FileFinder全局文件搜索 =========================
  "file_finder": {
    "file_icons": true,
    "skip_focus_for_active_in_search": true,
    "modal_max_width": "medium"
  },

  // ========================= UI界面 =========================
  "ui_font_family": ".ZedMono",
  "ui_font_size": 20,

  // ========================= 终端相关 =========================
  "terminal": {
    "shell": "system",
    "font_family": "Fira Code",
    "font_size": 16
  },

  // ========================= 小地图设置 =========================
  "minimap": {
    "show": "auto",
    "display_in": "active_editor"
  },

  // ========================= 主题自定义覆盖 =========================
  "theme_overrides": {
    "Catppuccin Macchiato": {
      "vim.mode.text": "#494d64",
      "vim.insert.background": "#a6da95",
      "vim.normal.background": "#c6a0f6",
      "vim.visual_line.background": "#8aadf4"
    }
  },

  // ========================= 协作相关配置 =========================
  "notification_panel": {
    "button": false
  },

  // ========================= LSP相关 =========================
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx"],
        "experimental": {
          "classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"]
        }
      }
    }
  }
}
